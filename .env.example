# AI Company Environment Variables

# Primary Claude API Configuration
ANTHROPIC_API_KEY=your_primary_api_key_here

# Multiple API Keys for Rotation (Optional)
ANTHROPIC_API_KEY_1=your_first_api_key_here
ANTHROPIC_API_KEY_2=your_second_api_key_here
ANTHROPIC_API_KEY_3=your_third_api_key_here
ANTHROPIC_API_KEY_4=your_fourth_api_key_here
ANTHROPIC_API_KEY_5=your_fifth_api_key_here

# API Key Rotation Settings
API_KEY_ROTATION_ENABLED=true
API_KEY_ROTATION_STRATEGY=round_robin  # round_robin, rate_limit_aware, random
API_KEY_COOLDOWN_MINUTES=60
API_KEY_MAX_RETRIES=3

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL=#ai-notifications

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# System Configuration
AI_VENV_ACTIVE=1
AI_AUTO_GIT_DISABLED=false
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///data/tasks.db

# Web UI Configuration
WEB_UI_PORT=5555
WEB_UI_HOST=localhost