# ===================================
# Elders Guild Environment Template
# ===================================
# このファイルを .env にコピーして値を設定してください
# cp .env.template .env

# === Core Settings ===
PROJECT_ROOT=/home/aicompany/ai_co
PROJECT_NAME=elders-guild
ENV=development
LOG_LEVEL=INFO
DEBUG=false

# === Language & Timezone ===
DEFAULT_LANGUAGE=ja
TIMEZONE=Asia/Tokyo

# === GitHub Integration ===
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=ext-maru
GITHUB_REPO_NAME=ai-co

# === Database Configuration ===
# PostgreSQL Main Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=elders_guild
POSTGRES_USER=elder_admin
POSTGRES_PASSWORD=your_postgres_password_here

# AI Company Database
AI_COMPANY_DB_NAME=ai_company
AI_COMPANY_DB_USER=ai_company_user
AI_COMPANY_DB_PASSWORD=your_ai_company_password_here

# Elders Knowledge Database
ELDERS_KNOWLEDGE_DB_NAME=elders_knowledge
ELDERS_KNOWLEDGE_DB_USER=elders_guild
ELDERS_KNOWLEDGE_DB_PASSWORD=your_elders_knowledge_password_here

# Database URLs (computed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DATABASE}
AI_COMPANY_DATABASE_URL=postgresql://${AI_COMPANY_DB_USER}:${AI_COMPANY_DB_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${AI_COMPANY_DB_NAME}
ELDERS_KNOWLEDGE_DATABASE_URL=postgresql://${ELDERS_KNOWLEDGE_DB_USER}:${ELDERS_KNOWLEDGE_DB_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${ELDERS_KNOWLEDGE_DB_NAME}

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# === RabbitMQ Configuration ===
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# === API Keys ===
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# === Service Ports ===
# API Server
API_PORT=8001
API_HOST=0.0.0.0

# External Service Ports
POSTGRES_EXTERNAL_PORT=8003
REDIS_EXTERNAL_PORT=8004
RABBITMQ_EXTERNAL_PORT=8005

# Worker Service Ports
WORKER_PORT_BASE=9000
PM_WORKER_PORT=9001
TASK_WORKER_PORT=9002
RESULT_WORKER_PORT=9003

# === Path Configuration ===
KNOWLEDGE_BASE_PATH=${PROJECT_ROOT}/knowledge_base
LOGS_PATH=${PROJECT_ROOT}/logs
DATA_PATH=${PROJECT_ROOT}/data
SCRIPTS_PATH=${PROJECT_ROOT}/scripts
LIBS_PATH=${PROJECT_ROOT}/libs
TESTS_PATH=${PROJECT_ROOT}/tests
WORKERS_PATH=${PROJECT_ROOT}/workers
COMMANDS_PATH=${PROJECT_ROOT}/commands
CONFIG_PATH=${PROJECT_ROOT}/config

# === Docker Configuration ===
DOCKER_REGISTRY=
DOCKER_IMAGE_PREFIX=elders-guild
DOCKER_NETWORK=elders-network

# === Monitoring & Metrics ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# === Security Settings ===
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === Slack Integration ===
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# === Email Configuration ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# === Worker Configuration ===
WORKER_CONCURRENCY=4
WORKER_PREFETCH_COUNT=1
TASK_TIMEOUT_SECONDS=3600
WORKER_HEARTBEAT_INTERVAL=60

# === Cache Configuration ===
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# === Feature Flags ===
ENABLE_AUTO_ISSUE_PROCESSOR=true
ENABLE_ELDER_FLOW=true
ENABLE_A2A_COMMUNICATION=true
ENABLE_NWO_SYSTEM=true

# === Development Settings ===
HOT_RELOAD=true
VERBOSE_LOGGING=false
MOCK_EXTERNAL_SERVICES=false

# === Backup Configuration ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=${PROJECT_ROOT}/backups

# === Performance Settings ===
CONNECTION_POOL_MIN_SIZE=2
CONNECTION_POOL_MAX_SIZE=10
REQUEST_TIMEOUT_SECONDS=60
ASYNC_BATCH_SIZE=100

# === 4 Sages Configuration ===
KNOWLEDGE_SAGE_ENABLED=true
TASK_SAGE_ENABLED=true
INCIDENT_SAGE_ENABLED=true
RAG_SAGE_ENABLED=true

# === Elder Servants Configuration ===
CODE_SERVANT_ENABLED=true
TEST_GUARDIAN_ENABLED=true
QUALITY_INSPECTOR_ENABLED=true
GIT_MASTER_ENABLED=true
DOCUMENTATION_KEEPER_ENABLED=true