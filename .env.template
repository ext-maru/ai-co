# AI Company Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC/CLAUDE API CONFIGURATION
# =============================================================================
# Primary API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Multiple API keys for rotation (optional)
ANTHROPIC_API_KEY_1=your_first_backup_key_here
ANTHROPIC_API_KEY_2=your_second_backup_key_here
ANTHROPIC_API_KEY_3=your_third_backup_key_here

# =============================================================================
# SLACK INTEGRATION
# =============================================================================
# Bot token (required for notifications and PM)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# App token (required for real-time messaging)
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Default notification channel
SLACK_CHANNEL=#ai-notifications

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
# Project path
PYTHONPATH=/home/aicompany/ai_co

# Virtual environment flag
AI_VENV_ACTIVE=1

# Auto git features
AI_AUTO_GIT_DISABLED=false

# Logging
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================
WEB_UI_PORT=5555
WEB_UI_HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION (optional)
# =============================================================================
DATABASE_URL=sqlite:///data/tasks.db

# =============================================================================
# API RATE LIMITING
# =============================================================================
API_KEY_ROTATION_ENABLED=true
API_KEY_ROTATION_STRATEGY=rate_limit_aware
API_KEY_COOLDOWN_MINUTES=60
API_KEY_MAX_RETRIES=3