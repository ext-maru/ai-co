# 🏛️ エルダーズギルド Pylint設定 v2.0
# Elder Guild Pylint Configuration - Modern Edition

[MAIN]
# プロジェクトルート設定
init-hook='import sys; sys.path.append("/home/aicompany/ai_co/elders_guild"); sys.path.append("/home/aicompany/ai_co/elders_guild/shared_libs"); sys.path.append("/home/aicompany/ai_co/elders_guild/elder_tree")'

# 並列処理数
jobs=4

# 無視するファイル・ディレクトリ
ignore=CVS,.git,__pycache__,migrations,build,dist,node_modules
ignore-patterns=test_.*\.py$,.*_test\.py$,.*\.pyc$,venv.*,site-packages.*

# 拡張モジュール許可リスト
extension-pkg-allow-list=numpy,cv2,torch,tensorflow,pydantic,fastapi

[MESSAGES CONTROL]
# Elder Guild重要項目のみ有効化（段階的アプローチ）
disable=all

enable=
    # 🚨 構文・致命的エラー
    syntax-error,
    parse-error,
    used-before-assignment,
    undefined-variable,
    
    # 🔧 インポート関連
    import-error,
    unused-import,
    cyclic-import,
    
    # 🐛 バグの可能性
    unreachable,
    duplicate-key,
    unnecessary-pass,
    
    # 🏛️ Elder Guild Iron Will
    trailing-whitespace,
    missing-final-newline,
    
    # ⚡ パフォーマンス
    unnecessary-comprehension,
    consider-using-generator

[FORMAT]
# Elder Guild コーディング標準
max-line-length=88
indent-string='    '
expected-line-ending-format=LF

[DESIGN]
# 複雑度制限（Elder Guild基準）
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=20
min-public-methods=1
max-public-methods=30

[SIMILARITIES]
# 重複コード検出
min-similarity-lines=6
ignore-comments=yes
ignore-docstrings=yes

[SPELLING]
# スペルチェック無効化（日本語多用のため）
spelling-dict=

[REPORTS]
# レポート設定
output-format=colorized
reports=yes
score=yes
