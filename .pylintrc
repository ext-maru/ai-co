# 🏛️ エルダーズギルド Pylint設定
# Elder Guild Pylint Configuration

[MASTER]
# プロジェクトルート設定
init-hook='import sys; sys.path.append("/home/aicompany/ai_co")'

# 並列処理数（CPUコア数-1）
jobs=4

# プログレス表示
persistent=yes

# 無視するファイル・ディレクトリ
ignore=CVS,.git,__pycache__,tests,test_*.py,migrations,build,dist,venv,env
ignore-patterns=test_.*\.py$,.*_test\.py$,.*\.pyc$

# 拡張モジュール
extension-pkg-whitelist=numpy,cv2,torch,tensorflow

[MESSAGES CONTROL]
# 無効化するメッセージ
disable=
    # 一時的に無効化（段階的に有効化予定）
    C0111,  # missing-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0511,  # fixme (TODO/FIXME/XXX)
    W0622,  # redefined-builtin
    W0212,  # protected-access
    E1101,  # no-member (false positives多い)
    C0103,  # invalid-name (定数名など)
    R0801,  # duplicate-code
    W0613,  # unused-argument
    W0640,  # cell-var-from-loop
    W0719,  # broad-exception-raised
    R1735,  # use-dict-literal
    R1734,  # use-list-literal
    C0206,  # consider-using-dict-items
    C0209,  # consider-using-f-string
    W1514,  # unspecified-encoding

# 有効化するメッセージ（エルダーズギルド重要項目）
enable=
    E0001,  # syntax-error
    E0011,  # unrecognized-inline-option
    E0012,  # bad-option-value
    E0100,  # init-is-generator
    E0101,  # return-in-init
    E0102,  # function-redefined
    E0103,  # not-in-loop
    E0104,  # return-outside-function
    E0105,  # yield-outside-function
    E0107,  # nonexistent-operator
    E0602,  # undefined-variable
    W0102,  # dangerous-default-value
    W0104,  # pointless-statement
    W0105,  # pointless-string-statement
    W0106,  # expression-not-assigned
    W0107,  # unnecessary-pass
    W0108,  # unnecessary-lambda
    W0109,  # duplicate-key
    W0199,  # assert-on-tuple
    W0602,  # global-variable-not-assigned
    W0604,  # global-at-module-level
    W0611,  # unused-import
    W0612,  # unused-variable
    W0614,  # unused-wildcard-import
    W0621,  # redefined-outer-name
    W0631,  # undefined-loop-variable
    W0632,  # unbalanced-tuple-unpacking
    W0702,  # bare-except
    W0703,  # broad-except
    W1201,  # logging-not-lazy
    W1202,  # logging-format-interpolation
    W1203,  # logging-fstring-interpolation
    R0123,  # literal-comparison
    R0124,  # comparison-with-itself
    R0201,  # no-self-use
    R0202,  # no-classmethod-decorator
    R0203,  # no-staticmethod-decorator

[REPORTS]
# レポート設定
output-format=json
reports=yes
score=yes

# レポート詳細度
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[BASIC]
# 命名規則
good-names=i,j,k,ex,Run,_,x,y,z,id,ok,db,fn,fp,e,f,df

# 変数名規則
variable-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
method-rgx=[a-z_][a-z0-9_]{2,30}$
function-rgx=[a-z_][a-z0-9_]{2,30}$

# ドキュメント文字列最小長
docstring-min-length=10

[FORMAT]
# コードフォーマット
max-line-length=100
ignore-long-lines=^\s*(# )?<?https?://\S+>?$
single-line-if-stmt=no
single-line-class-stmt=no
max-module-lines=1500
indent-string='    '
indent-after-paren=4

[LOGGING]
# ロギングモジュール
logging-modules=logging
logging-format-style=new

[MISCELLANEOUS]
# その他
notes=FIXME,XXX,TODO,HACK,BUG,OPTIMIZE,REFACTOR

[SIMILARITIES]
# 重複コード検出
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[SPELLING]
# スペルチェック（オプション）
# spelling-dict=en_US  # Disabled - dictionary not available
spelling-ignore-words=
    elders,guild,elder,claude,ai,nwo,
    todo,fixme,xxx,hack,
    api,url,uri,http,https,json,xml,yaml,
    db,sql,orm,crud,
    async,await,asyncio,
    pytest,unittest,mock,
    docker,kubernetes,k8s,
    rabbitmq,celery,redis,postgres,pgvector

[TYPECHECK]
# 型チェック
generated-members=
    torch.*,
    cv2.*,
    numpy.*,
    pandas.*

ignored-modules=
    cv2,
    torch,
    tensorflow

ignored-classes=
    optparse.Values,
    thread._local,
    _thread._local,
    SQLAlchemy,
    scoped_session

[VARIABLES]
# 変数チェック
init-import=no
dummy-variables-rgx=(_+[a-zA-Z0-9_]*?$)|dummy|unused
additional-builtins=
callbacks=cb_,_cb

[CLASSES]
# クラス設計
defining-attr-methods=__init__,__new__,setUp,__post_init__
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls
exclude-protected=_asdict,_fields,_replace,_source,_make

[DESIGN]
# 設計品質メトリクス（エルダーズギルド基準）
max-args=7             # 最大引数数
max-locals=20          # 最大ローカル変数数
max-returns=6          # 最大return文数
max-branches=15        # 最大分岐数
max-statements=60      # 最大ステートメント数
max-parents=7          # 最大継承階層
max-attributes=10      # 最大属性数
min-public-methods=1   # 最小パブリックメソッド数
max-public-methods=25  # 最大パブリックメソッド数
max-bool-expr=5        # 最大bool式複雑度
max-nested-blocks=5    # 最大ネスト深度

[IMPORTS]
# インポート規則
known-third-party=enchant
analyse-fallback-blocks=no
deprecated-modules=optparse,tkinter.tix
import-graph=
ext-import-graph=
int-import-graph=

[EXCEPTIONS]
# 例外処理
overgeneral-exceptions=
    builtins.BaseException,
    builtins.Exception

# Iron Will Enforcement（エルダーズギルド特別ルール）
[IRON_WILL]
# TODO/FIXME禁止（段階的に有効化）
# eval()使用禁止
# exec()使用禁止
# 未使用コード禁止