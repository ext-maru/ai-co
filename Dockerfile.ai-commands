# Elders Guild - AI Commands System Dockerfile
# AI統合コマンドシステム用

FROM python:3.11-slim

# メタデータ
LABEL maintainer="Claude Elder <claude@eldersguild.ai>"
LABEL description="Elders Guild AI Commands System"
LABEL version="1.0.0"

# 環境変数
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV DEBIAN_FRONTEND=noninteractive

# 作業ディレクトリ設定
WORKDIR /app

# システムパッケージ更新・必要パッケージインストール
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    libpq-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Python依存関係ファイルコピー
COPY requirements.txt /app/requirements.txt

# Python依存関係インストール
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir fastapi uvicorn[standard]

# アプリケーションコードコピー
COPY core /app/core
COPY commands /app/commands
COPY libs /app/libs
COPY scripts /app/scripts

# ポート公開
EXPOSE 8000

# ヘルスチェック
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# FastAPI起動
CMD ["uvicorn", "commands.main:app", "--host", "0.0.0.0", "--port", "8000"]