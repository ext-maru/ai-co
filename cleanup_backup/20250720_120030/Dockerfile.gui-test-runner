FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    unzip \
    xvfb \
    x11-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-test.txt /tmp/
RUN pip install --no-cache-dir -r /tmp/requirements-test.txt

# Set up working directory
WORKDIR /app

# Copy application files
COPY libs/ /app/libs/
COPY comprehensive_gui_test.py /app/
COPY lightweight_gui_test.py /app/

# Set environment variables
ENV DISPLAY=:99
ENV PYTHONPATH=/app
ENV SELENIUM_REMOTE_URL=http://selenium-chrome:4444/wd/hub

# Create directories for test results
RUN mkdir -p /app/test_screenshots /app/test_results

# Default command
CMD ["python3", "comprehensive_gui_test.py"]
