# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/app/logs/contract_upload.log

# 契約書処理設定
CONTRACT_TYPES=employment,service,partnership,nda,purchase
AUTO_CLASSIFICATION=true
OCR_ENABLED=true
