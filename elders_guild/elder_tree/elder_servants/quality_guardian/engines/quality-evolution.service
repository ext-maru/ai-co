[Unit]
Description=🤖 エルダーズギルド品質進化デーモン
After=network.target
Wants=network.target

[Service]
Type=simple
User=aicompany
Group=aicompany
WorkingDirectory=/home/aicompany/ai_co
ExecStart=/usr/bin/python3 /home/aicompany/ai_co/scripts/quality_daemon.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
Restart=always
RestartSec=10

# 環境変数
Environment=PYTHONPATH=/home/aicompany/ai_co
Environment=PYTHONUNBUFFERED=1

# ログ設定
StandardOutput=journal
StandardError=journal
SyslogIdentifier=quality-evolution

# セキュリティ設定
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/aicompany/ai_co

[Install]
WantedBy=multi-user.target
