# Upload Image Service 環境変数テンプレート

# 基本設定
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# データベース設定
DATABASE_URL=sqlite:///./upload_service.db
# 本番環境: postgresql://elder_admin:sage_wisdom_2025@172.29.65.239:5432/upload_image_service

# ファイルアップロード設定
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=100

# Google Drive 連携設定
GOOGLE_DRIVE_ENABLED=false
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials.json
GOOGLE_DRIVE_PARENT_FOLDER_ID=your-folder-id-here

# Google Drive オプション設定
GOOGLE_DRIVE_FOLDER_NAME_FORMAT=[{session_id}]_{submitter_name}
GOOGLE_DRIVE_AUTO_CREATE_FOLDERS=true
GOOGLE_DRIVE_SHARE_WITH_SUBMITTER=true

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=./app.log

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://172.29.65.239:9001
