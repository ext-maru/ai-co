#!/usr/bin/env python3
"""
Elder Dashboard Evolution 起動コマンド
"""

import os
import sys
from pathlib import Path

# プロジェクトルートディレクトリ
project_root = Path(__file__).parent
dashboard_env = project_root / "dashboard_env"

# 仮想環境のPythonを使用
python_path = dashboard_env / "bin" / "python"

# 環境変数設定
os.environ["PYTHONPATH"] = str(project_root)

# ダッシュボード起動
import subprocess

subprocess.run([str(python_path), str(project_root / "run_dashboard.py")])
